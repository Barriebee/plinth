        #!haml
      
        // Example stuff
    %hr
    
    %h3.h5 Pills

    %p To allow pills to toggle content.

    = example do
      %ul.pills
        %li= link_to "Link 1", "#target1", :data => { :switch => true, :"switch-toggle" => true }
        %li= link_to "Link 2", "#target2", :data => { :switch => true, :"switch-toggle" => true }
        %li= link_to "Link 3", "#target3", :data => { :switch => true, :"switch-toggle" => true }
      %div{:id => "target1"} switch content 1
      %div{:id => "target2"} switch content 2
      %div{:id => "target3"} switch content 3

      :coderay
        #!haml

        %ul.pills
          %li
            = link_to "Link 1", "#target1", :data => { :switch => true, :"switch-toggle" => true }
          %li
            = link_to "Link 2", "#target2", :data => { :switch => true, :"switch-toggle" => true }
          %li
            = link_to "Link 3", "#target3", :data => { :switch => true, :"switch-toggle" => true }
        %div{:id => "target1"} switch content 1
        %div{:id => "target2"} switch content 2
