    %h3.h5 Links
    
    = example do
      %a{:href=>"#my_link"} Text link
      %br
      %a.active{:href=>"#my_link"} Text link hover/active
      %br
      %a{:href=>"#my_link"} Prominent text link
      %br
      %a{:href=>"#my_link"} Prominent text link hover/active

      :coderay
        #!haml

        %a{:href=>"#my_link"} Text link
        %a.active{:href=>"#my_link"} Text link hover/active
        %a{:href=>"#my_link"} Prominent text link
        %a{:href=>"#my_link"} Prominent text link hover/active
      // end

